<table class="table table-striped table-bordered">
    <tbody>
        <tr>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        {{#each model as |exercise|}}
            <tr class="table-striped">
                <td>
                    {{exercise.name}}
                </td>
                <td>
                    {{#link-to 'admin.exercise.edit' exercise tagName="button" class="btn" }}Edit{{/link-to}}
                </td>
                <td>
                    <button class="btn" {{action 'delete' exercise.id}}>Delete</button>
                </td>
            </tr>
            {{else}}
                <tr class="table-striped">
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
        {{/each}}
    </tbody>
</table>
{{#link-to 'admin.exercise.create' tagName="button" class="btn" }}Create{{/link-to}}